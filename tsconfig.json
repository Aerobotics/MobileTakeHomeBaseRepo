{
  "compilerOptions": {
    "baseUrl": "./app",
    "module": "esnext",
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2019", "es2021"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "experimentalDecorators": true,
    "types": ["node", "jest"]
  },
  "include": ["app", "App.tsx", "scripts", "index.js", ".eslintrc.js"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "__mocks__",
    "react-native.config.js"
  ]
}
